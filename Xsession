setxkbmap -option caps:super

xset b off

xrandr --setprovideroutputsource 1 0

xrandr \
  --output DVI-1-2 --mode 1920x1080 \
  --output DVI-0 --mode 1920x1080 --right-of DVI-1-2 --primary \
  --output DVI-1 --mode 1920x1080 --right-of DVI-0 \
  --output DVI-1-3 --mode 1920x1080 --above DVI-0

xscreensaver -no-splash &

exec awesome
